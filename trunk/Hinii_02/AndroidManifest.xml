<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionName="04-02-2011" android:versionCode="2011020401"
	package="com.angelo.hiniid">
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	  <uses-permission
    android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission." />
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="6" />
	<supports-screens largeScreens="true" normalScreens="true"
		smallScreens="true" />
	<application android:name="Hiniid" android:icon="@drawable/icon"
		android:label="@string/app_name" android:theme="@style/FoursquareTheme">
		<meta-data android:name="android.app.default_searchable"
			android:value=".HiniiSearchActivity" />

		<uses-library android:name="com.google.android.maps" />

		<activity android:name=".HiniiSearchActivity" android:label="@string/app_name"
			android:windowSoftInputMode="stateHidden">
			<intent-filter>
				<action android:name="com.angelo.hiniid.HiniiSearchActivity" />
				<category android:name="android.intent.category.DEFAULT" />

			</intent-filter>
		</activity>

		<activity android:name=".SplashScreenActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ChangelogActivity">
		</activity>
		<activity android:name=".FetchImageForViewIntent">
		</activity>
		<activity android:name=".HiniiPointValueTabActivity">
		</activity>
		<activity android:name=".HiniiSearchResultsTabListActivity">
		</activity>
		<activity android:name=".HiniiSearchResultsTabMapActivity">
		</activity>

		<activity android:name=".HiniiPreferenceActivity"
			android:label="@string/preference_activity_label">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.PREFERENCE" />
			</intent-filter>
		</activity>

		<activity android:name=".HiniiSearchResultsActivity"
			android:label="@string/app_name" android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>

		<activity android:name=".HiniiPointValueActivity2">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>

		<activity android:name=".HiniiPointValueMapActivity">
		</activity>

	</application>

</manifest>
